{% javascript %}
  $('.hpAdvanture').owlCarousel({    
          nav: true, 
          navText: ["<img src='https://cdn.shopify.com/s/files/1/0683/7741/1865/files/west-arrow.png'>","<img src='https://cdn.shopify.com/s/files/1/0683/7741/1865/files/east-arrow.png'>"], 
          margin: 30, 
          dots: true,  
          stagePadding: 70,    
          items: 4,         
          loop: false,   
          autoplay: false, 
          dotsEach: true, 
          responsiveClass: true,
          onInitialized:advCounter,
          onTranslated:advCounter, 
          responsive: {  
              0: { 
                  items: 1,  
                  margin: 15, 
                  autoplay: false, 
                  stagePadding: 30      
              },  
              570: { 
                  items: 2,
                  margin: 15, 
                  autoplay: false, 
                  stagePadding: 30      
              },
              768: {  
                  items: 2, 
                  margin: 20, 
                  stagePadding: 40      
              },
              1023: {  
                  items: 4
              },
	          onInitialized : function(){ 
	              if($('.owl-item').first().hasClass('active'))
	                  $('.owl-prev').hide();
	              else
	                  $('.owl-prev').show();
	          }
          }
        });
         
        function advCounter(event) { 
            var element = event.target;
            var items = event.item.count; 
            var item = event.item.index + 1; 
            if(window.outerWidth > 1023) { 
              $('.hp-advanture #slider-counter').html(""+item+" / 3");   
            }
            else if (window.outerWidth < 570) { 
              $('.hp-advanture #slider-counter').html(""+item+" / "+items);   
            }  
 
            else if (window.outerWidth > 571 && window.outerWidth < 1022) {    
              $('.hp-advanture #slider-counter').html(""+item+" / 5");        
            } 
 
          }  

        setTimeout(function() {  
          jQuery(".hp-advanture #slider-counter").detach().appendTo('.hp-advanture .owl-nav');
        }, 1000); 
  
        setTimeout(function() {  
          jQuery(".hp-advanture .hpAdvanture .owl-dots").detach().appendTo('.hp-advanture .owl-nav');  
        }, 1000);
      
{% endjavascript %}