{% stylesheet %}
  .free-gift{
    padding-bottom:130px;
  }
  .free-gift-banner {
  position: relative;
  width: 100%;
  height: 100%;
}

.free-gift-banner-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
}

.free-gift-banner-text {
  text-align: center;
  padding: 0 18px;

}

.free-gift-banner-text h1 {
  text-align: center;
  color: var(--white, #F7F7F7);
  text-align: center;

  font-size: 48px;
  font-style: normal;
  font-weight: 700;
  line-height: 100%;
  /* 48px */
}

.free-gift-banner-text a {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 44px !important;
  color: var(--black, #191919);
  font-size: 16px;
  font-style: normal;
  font-weight: 900;
  line-height: normal;
  font-family: Archivo-Medium;
  text-transform: uppercase;
  border: 1px solid #fff;
  box-shadow: none;
  padding: 8px 24px;
  background: #fff;
  margin-top: 16px;
  
}
.free-gift-banner-text a  svg{
  margin-left:8px;
}
@media (max-width: 767px) {
  .free-gift-banner-text h1 {
    font-size: 24px;
  }

  .free-gift-banner .desktop {
    display: none;
  }

  .free-gift-banner-text a {
    font-size: 14px;
  }
  .free-gift {
    padding-bottom:70px;
  }
}

@media (min-width: 768px) {
  .free-gift-banner .mobile {
    display: none;
  }
}
{% endstylesheet %}