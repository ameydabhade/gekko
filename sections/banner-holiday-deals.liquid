<style>
    .banner-holiday {
        position: relative;
        width: 100%;
        cursor:pointer;
        overflow: hidden;
    }

    .banner-holiday .banner-holiday-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .banner-holiday .banner-holiday-content {
        position: absolute;
        top: 20px;
        left: 20px;
        padding: 20px;
        border-radius: 8px;
        display:flex;
        flex-direction:column;
        gap:32px;
    }

    .banner-holiday .banner-holiday-content h1 {
        color: #000;


        font-style: normal;
        font-weight: 600;
        line-height: 100%; /* 60px */
        letter-spacing: -3px;
        text-transform: uppercase;
    }

    .banner-holiday .banner-holiday-content p {
        color: #000;

        font-size: 18px;
        font-style: normal;
        font-weight: 500;
        line-height: 150%; /* 27px */
    }
    .banner-holiday .banner-holiday-content p span {
       text-transform:uppercase;
       font-weight:600;
    }
    .banner-holiday-content a{
        display: flex;
        padding: 8px 24px;
        justify-content: center;
        align-items: center;
        gap: 16px;
        border-radius: 44px;
        background: #000;
        color: #FFF;
        font-size: 16px;
        font-style: normal;
        font-weight: 600;
        line-height: normal;
        text-transform: uppercase;
        width:fit-content;
    }

     @media (max-width: 768px) {
            .banner-holiday .banner-holiday-image {
            display:none;
            }

  .banner-holiday .banner-holiday-image-mobile {
            width:100%;
            height:100%;
            }
      .banner-holiday .banner-holiday-content {
            height:100%;
            left:0 !important;
            gap:16px;
        }
        .banner-holiday .banner-holiday-content h1 {
            font-size: 32px;
        }
        .banner-holiday .banner-holiday-content p {
            font-size:16px;
        }

     }

    @media (min-width: 768px) {
        .banner-holiday {
            height: 400px;
        }

        .banner-holiday .banner-holiday-content {
            top: 40px;
            left: 40px;
            padding: 30px;
            width: 580px;
        }

        .banner-holiday .banner-holiday-content h1 {
            font-size: 32px;
        }

        .banner-holiday .banner-holiday-content p {
            font-size: 18px;
        }
         .banner-holiday .banner-holiday-image-mobile {
       display:none
    }

    }

    @media (min-width: 1024px) {
        .banner-holiday {
            height: 700px;
        }

        .banner-holiday .banner-holiday-content h1 {
             font-size: 60px;
        }

        .banner-holiday .banner-holiday-content p {
            font-size: 18px;
        }
    }

    @media screen and (min-width: 600px) and (max-width: 768px) {
     .banner-holiday .banner-holiday-content {
            top: 100px;

        }
    }


    @media screen and (min-width: 769px) and (max-width: 1200px) {
