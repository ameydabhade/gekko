{% javascript %}
  $('.browseCollections').owlCarousel({
          nav: true,
          navText: ["<img src='https://cdn.shopify.com/s/files/1/0683/7741/1865/files/west-arrow.png'>","<img src='https://cdn.shopify.com/s/files/1/0683/7741/1865/files/east-arrow.png'>"],
          margin: 30,
          dots: true,
          stagePadding: 70,
          items: 5,
          loop: false,
          autoplay: false,
          dotsEach: true,
          responsiveClass: true,
          onInitialized:colCounter,
          onTranslated:colCounter,
          responsive: {
              0: {
                  items: 1,
                  margin: 15,
                  autoplay: false,
                  stagePadding: 30
              },
              570: {
                  items: 2,
                  margin: 15,
                  autoplay: false,
                  stagePadding: 30
              },
              768: {
                  items: 2,
                  margin: 20,
                  stagePadding: 40
              },
              1023: {
                  items: 5
              },
           onInitialized : function(){
               if($('.owl-item').first().hasClass('active'))
                   $('.owl-prev').hide();
               else
                   $('.owl-prev').show();
           }
          }
        });

        function colCounter(event) {
            var element = event.target;
            var items = event.item.count;
            var item = event.item.index + 1;
            if(window.outerWidth > 1023) {
              $('.browse-collection #slider-counter').html(""+item+" / 4");
            }
            else if (window.outerWidth < 570) {
              $('.browse-collection #slider-counter').html(""+item+" / "+items);
            }

            else if (window.outerWidth > 571 && window.outerWidth < 1022) {
              $('.browse-collection #slider-counter').html(""+item+" / 6");
            }

          }

        setTimeout(function() {
          jQuery(".browse-collection #slider-counter").detach().appendTo('.browse-collection .owl-nav')
        }, 1000);

        setTimeout(function() {
          jQuery(".browse-collection .browseCollections .owl-dots").detach().appendTo('.browse-collection .owl-nav')
        }, 1000);
{% endjavascript %}
