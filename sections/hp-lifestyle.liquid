    .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content .hp-lifestyle-inner-content-right{
      padding: 40px 40px !important;
    }
  }

  @media(max-width: 990px){
    .hp-lifestyle .hp-lifestyle-inner img.desktop{
      display: none;
    }

    .hp-lifestyle .hp-lifestyle-inner img.mobile{
      display: block;
    }

    .hp-lifestyle .hp-lifestyle-inner{
      grid-gap: 0px;
      grid-template-columns: repeat(1, 1fr);
    }

    .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content .hp-lifestyle-inner-content-left,
    .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content .hp-lifestyle-inner-content-right{
      position: relative;
      top: 0;
      left: 0;
      padding: 40px 20px;
