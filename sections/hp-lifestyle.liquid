      text-transform: uppercase;
    }

    .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content .hp-lifestyle-inner-content-right a {
      float: none;
    }

    .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content a{
      display: flex;
      padding: 8px 24px;
      justify-content: center;
      align-items: center;
      gap: 16px;
      border-radius: 44px;
      border: 1px solid #FFF;
      background: #FFF;
      color: #000;
      font-size: 14px;
