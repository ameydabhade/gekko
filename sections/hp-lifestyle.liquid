    .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content br{
      display: block;
    }

    .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content p{
      color: #FFF;
      font-size: 14px;
      font-style: normal;
      font-weight: 600;
      line-height: 150%; /* 21px */
      margin: 16px 0px 0px 0px;
    }
  }

