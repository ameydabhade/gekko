    font-style: normal;
    font-weight: 600;
    line-height: normal;
    text-transform: uppercase;
    margin-top: 32px;
    width: fit-content;
  }

  @media(min-width: 769px) and (max-width: 1023px){
    .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content .hp-lifestyle-inner-content-left{
      top: 40px;
      left: 40px;
    }
  
