<style>
  .hp-lifestyle{
    
  }

  .hp-lifestyle .hp-lifestyle-inner{
    display: grid;
    grid-gap: 0px;
    grid-template-columns: repeat(2, 1fr);
  }

  .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content{
    position: relative;
  }

  .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content .hp-lifestyle-inner-content-left{
    position: absolute;
    top: 70px;
    left: 70px;
    z-index: 10;
  }

  .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content .hp-lifestyle-inner-content-right{
    position: absolute;
    bottom: 70px;
    right: 70px;
    z-index: 10;
    text-align: right;
  }

  .hp-lifestyle .hp-lifestyle-inner img{
    width: 100%;
  }

  .hp-lifestyle .hp-lifestyle-inner img.mobile{
    display: none;
  }

  .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content h1{
    color: var(--actually-white, #FFF);
    font-size: 40px;
    font-style: normal;
    font-weight: 600;
    line-height: 100%; /* 48px */
    letter-spacing: -0.96px;
    margin: 0px;
  }

  .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content p{
    color: #FFF;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
    line-height: 150%; /* 27px */
    text-transform: capitalize;
    margin: 4px 0px 0px 0px;
  }

  .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content .hp-lifestyle-inner-content-right a{
    float: right;
  }

  .hp-lifestyle .hp-lifestyle-inner .hp-lifestyle-inner-content a{
    display: flex;
    padding: 8px 24px;
    justify-content: center;
